class Dog:

    # Class Attribute
    species = 'mammal'

    # Initializer / Instance Attributes
    def __init__(self, name, age):
        self.name = name
        self.age = age

      
# Instantiate the Dog object
philo = Dog("Philo", 5)
mikey = Dog("Mikey", 6)
Ruby = Dog("Ruby", 7)

def get_biggest_number(*arge):
  return max(arge)

# Access the instance attributes
print("{} is {}, {} is {} and {} is {}.".format(
    philo.name, philo.age, mikey.name, mikey.age, Ruby.name, Ruby.age))

print("The oldest age is {}.".format(get_biggest_number(philo.age, mikey.age, Ruby.age)))
